version: 1.0.0
metadata:
  author: Pix3 Auto Template
  created: 2025-09-27
  description: Starter scene with box, light, camera and logo sprite
root:
  - id: environment-root
    type: Node3D
    name: Environment Root
    properties:
      transform:
        position: [0, 0, 0]
        rotationEuler: [0, 0, 0]
        scale: [1, 1, 1]
    children:
      - id: main-camera
        type: Camera3D
        name: Main Camera
        properties:
          projection: perspective
          fov: 60
          near: 0.1
          far: 1000
          transform:
            position: [0, 2, 6]
            rotationEuler: [-10, 0, 0]
            scale: [1, 1, 1]
        children: []
      - id: key-light
        type: DirectionalLightNode
        name: Key Light
        properties:
          intensity: 1.2
          color: "#ffffff"
          transform:
            position: [5, 8, 3]
            rotationEuler: [-45, 35, 0]
            scale: [1, 1, 1]
        children: []
      - id: demo-box
        type: GeometryMesh
        name: Demo Box
        properties:
          geometry: box
          size: [1, 1, 1]
          material:
            type: standard
            color: "#ff00ff"
          transform:
            position: [0, 0.5, 0]
            rotationEuler: [0, 45, 0]
            scale: [1, 1, 1]
        children: []
      - id: demo-glb
        type: MeshInstance
        name: Demo Glb
        properties:
          src: templ://Duck.glb
          size: [1, 1, 1]
          transform:
            position: [0, 0, 0]
            rotationEuler: [0, 0, 0]
            scale: [1, 1, 1]
        children: []
  - id: ui-layer
    type: Group2D
    name: UI Layer
    properties:
      width: 256
      height: 256
      transform:
        position: [0, 0]
        scale: [1, 1]
        rotation: 0
    children:
      - id: logo-sprite
        type: Sprite2D
        name: Logo Sprite
        properties:
          texturePath: templ://pix3-logo.png
          width: 160.7369425912922
          height: 152.4255727703653
          transform:
            position: [-240.11065879564615, 464.51747388518265]
            scale: [1, 1]
            rotation: 0
        children:
          - id: sprite2d-1766523812223-r4qa2tf
            type: Sprite2D
            name: ai
            properties:
              texturePath: res://images/ai.jpg
              width: 570.9831350948033
              height: 258.5491134129213
              transform:
                position: [261.9446925474016, 396.2589317064606]
                scale: [1, 1]
                rotation: 0
