version: 1.0.0
metadata:
  author: Pix3 Auto Template
  created: 2025-09-27
  description: Starter scene with box, light, camera and logo sprite
root:
  - id: environment-root
    type: Node3D
    name: Environment Root
    properties:
      transform:
        position: [0, 0, 0]
        rotationEuler: [0, 0, 0]
        scale: [1, 1, 1]
    children:
      - id: main-camera
        type: Camera3D
        name: Main Camera
        properties:
          projection: perspective
          fov: 60
          near: 0.1
          far: 1000
          transform:
            position: [0, 2, 6]
            rotationEuler: [-10, 0, 0]
            scale: [1, 1, 1]
        children: []
      - id: key-light
        type: DirectionalLightNode
        name: Key Light
        properties:
          intensity: 1.2
          color: "#ffffff"
          transform:
            position: [5, 8, 3]
            rotationEuler: [-45, 35, 0]
            scale: [1, 1, 1]
        children: []
      - id: demo-box
        type: GeometryMesh
        name: Demo Box
        properties:
          geometry: box
          size: [1, 1, 1]
          material:
            type: standard
            color: "#ff00ff"
          transform:
            position: [0, 0.5, 0]
            rotationEuler: [0, 45, 0]
            scale: [1, 1, 1]
        children: []
      - id: demo-glb
        type: MeshInstance
        name: Demo Glb
        properties:
          src: templ://Duck.glb
          size: [1, 1, 1]
          transform:
            position: [0, 0, 0]
            rotationEuler: [0, 0, 0]
            scale: [1, 1, 1]
        children: []
  - id: ui-layer
    type: Group2D
    name: UI Layer
    properties:
      width: 256
      height: 256
      transform:
        position: [0, 0]
        scale: [1, 1]
        rotation: 0
    children:
      - id: logo-sprite
        type: Sprite2D
        name: Logo Sprite
        properties:
          texturePath: templ://pix3-logo.png
          transform:
            position: [2.238687236657304, 3.8936863588483144]
            scale: [0.01, 0.01]
            rotation: 0
      - id: sprite2d-1766524794309-ug3akuf
        type: Sprite2D
        name: ai
        properties:
          transform:
            position: [1.5045646067415732, 2.736185481039326]
            scale: [0.02, 0.02]
            rotation: 0
          texturePath: res://images/ai.jpg
