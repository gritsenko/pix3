{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client",
      "vitest"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/core/*": [
        "src/core/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@/state/*": [
        "src/state/*"
      ],
      "@/fw/*": [
        "src/fw/*"
      ],
      "@pix3/runtime": [
        "packages/pix3-runtime/src"
      ],
      "@pix3/runtime/*": [
        "packages/pix3-runtime/src/*"
      ],
      "@pix3/engine": [
        "src/fw/engine-api.ts"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src",
    "packages/pix3-runtime/src",
    "test_assets"
  ]
}